RewriteEngine On

# Redirigir .php a sin .php
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /([^\.]+)\.php감이HTTP/
RewriteRule ^([^\.]+)\.php$ http://%{HTTP_HOST}/$1 [R=301,L]

# ... (tus otras reglas para eliminar el .php)
